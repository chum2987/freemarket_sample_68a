          .mypage-address__form__group
            = f.label :city, "市区町村"
            %span 必須
            = f.text_field :city, placeholder: "例)横浜市緑区"

          .mypage-address__form__group
            = f.label :street, "番地"
            %span 必須
            = f.text_field :street, placeholder: "例)青山1-1-1"

          .mypage-address__form__group
            = f.label :building_name, "建物名"
            %span.any 任意
            = f.text_field :building_name, placeholder: "例)123-4567"

          .mypage-address__form__group
